
<div class="shop-pro-admin">
  <h2>🧾 <%= I18n.t("shop_pro.admin.orders") %></h2>
  <p><a href="<%= admin_shop_pro_products_path %>">产品管理</a> | <a href="<%= admin_shop_pro_coupons_path %>">优惠券</a></p>
  <table class="table">
    <thead><tr><th>ID</th><th>状态</th><th>金额（分）</th><th>收件人</th><th>电话</th><th>创建</th><th></th></tr></thead>
    <tbody>
      <% @orders.each do |o| %>
        <tr>
          <td><%= o.id %></td>
          <td><%= o.status %></td>
          <td><%= o.total_cents %> <%= o.currency %></td>
          <td><%= o.customer_name %></td>
          <td><%= o.customer_phone %></td>
          <td><%= o.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="actions">
            <a class="btn btn-primary" href="<%= admin_shop_pro_order_path(o) %>">查看</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
