
<div class="shop-pro-admin">
  <h2>🎟️ <%= I18n.t("shop_pro.admin.coupons") %></h2>
  <p><a class="btn btn-primary" href="<%= new_admin_shop_pro_coupon_path %>">新建优惠券</a>
     &nbsp;|&nbsp; <a href="<%= admin_shop_pro_products_path %>">产品管理</a>
     &nbsp;|&nbsp; <a href="<%= admin_shop_pro_orders_path %>">订单管理</a></p>
  <table class="table">
    <thead><tr><th>ID</th><th>Code</th><th>Product</th><th>立减（分）</th><th>使用/上限</th><th>启用</th><th></th></tr></thead>
    <tbody>
      <% @coupons.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.code %></td>
          <td><%= c.product_id %></td>
          <td><%= c.discount_cents %></td>
          <td><%= c.usage_count %>/<%= c.usage_limit || "∞" %></td>
          <td><%= c.active ? "✅" : "—" %></td>
          <td class="actions">
            <a class="btn btn-primary" href="<%= edit_admin_shop_pro_coupon_path(c) %>">编辑</a>
            <a class="btn btn-danger" data-method="delete" href="<%= admin_shop_pro_coupon_path(c) %>" data-confirm="Delete?">删除</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
